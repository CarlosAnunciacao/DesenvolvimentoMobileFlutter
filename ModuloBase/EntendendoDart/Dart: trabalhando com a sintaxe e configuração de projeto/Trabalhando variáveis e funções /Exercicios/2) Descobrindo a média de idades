import 'dart:io';

void main() {

  print("Digite um número:");
  var entrada = stdin.readLineSync()!;
  var numeroUm = int.parse(entrada);

  print("Digite um número:");
  var entrada = stdin.readLineSync()!;
  var numeroDois = int.parse(entrada);

  print("Digite um número:");
  var entrada = stdin.readLineSync()!;
  var numeroTres = int.parse(entrada);

  var resultado = (numeroUm + numeroDois + numeroTres) / 3 ;

  print("A média das idades é $resultado.");
}

---------- codigo limpo ------------

import 'dart:io';

void main() {
  print("Digite a primeira idade:");
  var n1 = int.parse(stdin.readLineSync()!);

  print("DDigite a segunda idade:");
  var n2 = int.parse(stdin.readLineSync()!);

  print("Digite a terceira idade:");
  var n3 = int.parse(stdin.readLineSync()!);

  var media = (n1 + n2 + n3) / 3;

  print("A média é $media.");
}
